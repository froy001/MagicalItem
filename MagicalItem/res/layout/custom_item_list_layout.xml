<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_scroll_bg"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/tvItemName"
        style="@style/lv_item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/tvCL"
        style="@style/lv_item_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemName"
        android:layout_alignParentLeft="true"
        android:paddingBottom="5dp" />

    <TextView
        android:id="@+id/tvPrice_CustomItemListLayout"
        style="@style/lv_item_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvCL"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/tvCL" />

</RelativeLayout>