<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <!-- Application theme. -->
    <style name="MagicalItemManagerTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="btn_main_text" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">72sp</item>
        <item name="android:shadowColor">@color/bordo_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/scroll_image_bg</item>
        
    </style>
    <style name="btn_add_text" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/base_yellow</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">64sp</item>
        <item name="android:shadowColor">@color/bordo_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/scroll_image_bg</item>
        
    </style>
    <style name="lv_item_name_text" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/base_bordo</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/bordo_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@color/transparent</item>
        
    </style>
     <style name="lv_item_secondary_text" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/base_yellow</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@color/transparent</item>
        
    </style>

</resources>